<div class="container">
	<div class="row">

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

		<div class="col-xs-3">
			<%= render 'users/info', user: @book.user, book: @book %>
		</div>

	<div class="col-xs-9">
	<h1>Book detail</h1>
		<table class="table table-striped">
			<tbody>
			    <tr>
			      <td><div>
			      	<%= link_to user_path(@book.user_id) do %>
			      	<%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: 'no_image.jpg' %><br><%= @book.user.name %>
			      	<% end %></td>
			      <td>
			      	<%= link_to book_path(@book.id) do %>
			      	<%= @book.title %>
			      	<% end %>
			      	</td>
			      <td><%= @book.body %></td>
			      <th colspan="3"></th>

			      <% if @book.user == current_user %>
			      <th><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-default' %></th>
			      <th><%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-default', method: :delete, "data-confirm" => "本当に消しますか？" %></th>
			      <% end %>
			    </tr>
			</tbody>
		</table>
	</div>
	</div>
</div>