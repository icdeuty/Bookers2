
			<h2>User info</h2>
				<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg' %>
				<h4>name</h4>
				<%= user.name %>
				<h4>introduction</h4>
				<%= user.introduction %><br>
				<%= link_to(edit_user_path(user.id)) do %>
					<button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
				<% end %>

			<h2>New book</h2>
				<%= form_for(book) do |f| %>
				  <h4>Title</h4>
				  <%= f.text_field :title %>
				  <h4>Opinion</h4>
				  <%= f.text_area :body %><br>
				  <%= f.submit 'Create Book', class: 'btn btn-primary' %>
				<% end %>
