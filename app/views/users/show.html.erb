<div class="container">
	<div class="row">

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


		<div class="col-xs-3">
			<%= render 'users/info', user: @user, book: @book %>
		</div>

		<div class="col-xs-9">

		<h1>Books</h1>

			<table class="table table-striped">

				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
				    <tr>
				      <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: 'no_image.jpg' %></td>
				      <td>
				      	<%= link_to book_path(book.id) do %>
				      	<%= book.title %>
				      	<% end %>
				      	</td>
				      <td><%= book.body %></td>
				      <th colspan="3"></th>
				      <% end %>
				    </tr>
				</tbody>
			</table>
		</div>
	</div>
</div>